<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Principal">

    <ImageView
        android:id="@+id/iv_titulo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/grupo2"/>

    <Button
        android:id="@+id/btn_detalles"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/botones"
        android:text="Detalles"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/btn_globos"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/botones"
        android:text="Globos"
        android:layout_marginTop="7dp"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/btn_peluches"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/botones"
        android:text="Peluches"
        android:layout_marginTop="7dp"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/btn_regalos"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/botones"
        android:text="Regalos"
        android:layout_marginTop="7dp"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/btn_tazas"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/botones"
        android:text="Tazas"
        android:layout_marginTop="7dp"
        android:textSize="30sp"/>




</LinearLayout>